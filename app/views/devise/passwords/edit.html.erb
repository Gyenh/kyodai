<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Changer de mot de passe</h3>
          <div class="box">
            <figure class="avatar">
              <%= image_tag("logokyo.png", height: '128', width: '128')%>
            </figure>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <form>
              <div class="field">
                <div class="control">
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"input is-large", placeholder:"Nouveau mot de passe" %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Saisir encore le mdp", class:"input is-large" %>
                </div>
              </div>

              <div class="actions">
                <%= f.button fa_icon("rocket", text:"Changer le mdp !", class:"text-muted pull-left"), class:"button is-primary is-large is-fullwidth" %>
              </div>
            </form>
            <% end %>

          </div>
          <p class="has-text-grey">
            <%= render "devise/shared/links" %>
          </p>
      </div>
    </div>
  </div>
</section>
