<section class="section">
  <div class="columns is-desktop">
<!-- DISPLAY LAST SHARED MUSIC -->
    <div class="column">
      <div class="box">
        <h2 class="title has-text-centered has-text-dark"> Dernières musiques </h2>

          <div class="level">
            <div class="level-left">
              <div class="level-item">
                <%= link_to "Toutes les musiques", posts_path, class:"button"%>
              </div>
            </div>
            <div class="level-right">
              <div class="level-item">
                <%= link_to "Partager une musique", new_post_path, class:"button is-info"%>
              </div>
            </div>
          </div>

          <div class="column">
            <% @posts.each_slice(4) do |music| %>
            <div class="columns">
              <% music.each do |post| %>
              <div class="column is-one-quarter">
                <!-- CARD -->
                <div class="card bm--card-equal-height">

                  <div class="card-image">
                    <figure class="image is-4by3">
                      <%= image_tag("http://img.youtube.com/vi/#{post.link}/0.jpg") %>
                    </figure>
                  </div>

                  <div class="card-content">
                    <div class="media">
                      <div class="media-content has-text-centered">
                        <p class="title is-4 has-text-dark"><%= post.title %></p>
                        <p class="subtitle is-6 has-text-dark"> Publié(e) par <%= post.user.username.capitalize %></p>
                      </div>
                    </div>
                    <div class="content">
                      <%= post.content %>
                    </div>
                  </div>


                  <div class="card-footer">
                    <span class="card-footer-item"><%= post.comments.count %> Commentaire(s)</span>
                  </div>

                  <footer class="card-footer"><%= link_to "Voir", post_path(post), class:"button card-footer-item" %>

                </div>
                <!-- END CARD -->
              </div>
              <% end %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
<!-- END SHARED MUSIC -->
<!-- SECTION WITH THE LAST ARTICLES-->
      <div class="column is-one-quarter-fullhd">
        <div class="box">
          <h2 class="title has-text-centered has-text-dark"> Derniers articles </h2>
          <div class="level">
            <div class="level-left">
              <div class="level-item">
              </div>
            </div>
            <div class="level-right">
              <div class="level-item">
                <%= link_to "Ecrire un article", root_path, class:"button is-info"%>
              </div>
            </div>
          </div>
          <div class="box">
            <article class="media">
              <div class="media-left">
                <figure class="image is-64x64">
                  <img src="https://versions.bulma.io/0.7.0/images/placeholders/128x128.png" alt="Image">
                </figure>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong>Snak Oniboso</strong> <small>@estattendu</small> <small>merde</small>
                    <br>
                    On attend que monsieur Snak se mette au travail
                  </p>
                </div>
                <nav class="level is-mobile">
                  <div class="level-left">
                    <a class="level-item" aria-label="reply">
                      <span class="icon is-small">
                        <%= fa_icon "reply", aria: { hidden: true} %>
                      </span>
                    </a>
                    <a class="level-item" aria-label="retweet">
                      <span class="icon is-small">
                        <%= fa_icon "retweet", aria: { hidden: true} %>
                      </span>
                    </a>
                    <a class="level-item" aria-label="like">
                      <span class="icon is-small">
                        <%= fa_icon "heart", aria: { hidden: true} %>
                      </span>
                    </a>
                  </div>
                </nav>
              </div>
            </article>
          </div>
        </div>
      </div>
<!-- END ARTICLES SECTION -->
  </div>
</section>
