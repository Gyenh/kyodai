<section class="section">
  <div class="container">
    <h1 class="title has-text-centered">Toutes les musiques partagées</h1>

    <div class="level">

      <div class="level-left">
        <div class="level-item">
          <div class="button"> Voir mes vidéos</div>
        </div>
      </div>

      <div class="level-right">
        <div class="level-item">
          <%= link_to "New post", new_post_path, class:"button is-info"%>
        </div>
      </div>

    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <% @posts.each_slice(4) do |music| %>
    <div class="columns">
      <% music.each do |post| %>
      <div class="column is-one-quarter">
        <div class="card bm--card-equal-height">

          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag("http://img.youtube.com/vi/#{post.link}/0.jpg") %>
            </figure>
          </div>

          <div class="card-content">
            <div class="media">
              <div class="media-content has-text-centered">
                <p class="title is-4"><%= post.title %></p>
              </div>
            </div>

            <div class="content">
              <%= post.content %>
            </div>

          </div>

          <div class="card-footer">
            <span class="card-footer-item"><%= post.comments.count %> Commentaire(s)</span>
            <p class="card-footer-item">Publié(e) par <%= post.user.username.capitalize %></p>
          </div>

          <footer class="card-footer">
            <%= link_to "See post", post_path(post), class:"card-footer-item" %>
            <a href="#" class="card-footer-item">Edit</a>
            <a href="#" class="card-footer-item">Delete</a>
          </footer>

        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</section>
